<div class="reverse-info col-lg-10 py-5">
    <div class="row mb-5">
        <label class="col col-form-label">
            <div class="d-flex flex-column flex-md-row justify-content-md-between">
                <div class="d-inline mb-3 mb-md-0">毛孩姓名 <span class="text-danger">*</span></div>
                <div class="d-flex flex-column w-md-75">
                    <input type="text" class="form-control d-inline" required>
                    <div class="invalid-feedback">
                        請輸入毛孩姓名
                    </div>
                </div>
            </div>
        </label>
    </div>
    <div class="row mb-5">
        <div class="col-md-3">
            <div class="mb-3 mb-md-0">樂園服務 <span class="text-danger">*</span></div>
        </div>
        <div class="col-md-9">
            <div class="d-flex">
                <div class="form-check form-check-inline">
                    <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="paradise" value="是" required>
                        是（+200元）
                        <div class="invalid-feedback ms-0">
                            請選擇是否加購
                        </div>
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="paradise" value="否" required>
                        否
                    </label>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-5">
        <label class="col col-form-label">
            <div class="d-flex flex-column flex-md-row justify-content-md-between">
                <div class="d-inline mb-3 mb-md-0">緊急聯絡人 <span class="text-danger">*</span></div>
                <div class="d-flex flex-column w-md-75">
                    <input type="text" class="form-control d-inline" required>
                    <div class="invalid-feedback">
                        請輸入緊急聯絡人姓名
                    </div>
                </div>
            </div>
        </label>
    </div>
    <div class="row mb-5">
        <label class="col col-form-label">
            <div class="d-flex flex-column flex-md-row justify-content-md-between">
                <div class="d-inline mb-3 mb-md-0">連絡電話 <span class="text-danger">*</span></div>
                <div class="d-flex flex-column w-md-75">
                    <input type="tel" class="form-control d-inline" required>
                    <div class="invalid-feedback">
                        請輸入緊急聯絡人電話
                    </div>
                </div>
            </div>
        </label>
    </div>
    <div class="row mb-5">
        <label class="col col-form-label">
            <div class="d-flex flex-column flex-md-row justify-content-md-between">
                <div class="d-inline mb-3 mb-md-0">其他備註</div>
                <textarea name="remark" id="remark" cols="30" rows="6"
                    class="form-control w-md-75 rounded-1"></textarea>
            </div>
        </label>
    </div>
    <div class="row justify-content-md-end">
        <div class="col-md-9">
            <button type="submit"
                class="d-flex justify-content-center align-items-center btn btn-primary rounded-0 w-100 reverse-btn">送出<i
                    class="bi bi-arrow-right d-block fs-4 ms-3"></i></button>
        </div>
    </div>
</div>